<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp">

    <ImageView
        android:id="@+id/iv_card_ic_wallet"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/gap_larger"
        android:src="@drawable/ic_wallet"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_tittle_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gap_normal"
        android:text="@string/wallet_name"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/iv_card_ic_wallet"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_tittle_settings"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/gap_larger"
        android:background="@android:color/transparent"
        android:contentDescription="@string/coin_type_setting"
        android:padding="@dimen/gap_small"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_money"
        app:layout_constraintBottom_toBottomOf="@id/tv_tittle_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_tittle_info" />

</androidx.constraintlayout.widget.ConstraintLayout>